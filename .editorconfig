# https://EditorConfig.org

# top-most EditorConfig file
root = true

# Global settings & defaults
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 240
tab_width = 4
trim_trailing_whitespace = true

# JSON - general formatting
[*.json]
indent_style = space
indent_size = 4

# YAML - general formatting
[*.{yml,yaml}]
indent_style = space
indent_size = 4
quote_type = double

# Markdown - general formatting
[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

# Makefiles - requires tabs
[{Makefile, *.mk}]
indent_style = tab

# Swift - general formatting
[*.swift]
indent_style = space
indent_size = 4
